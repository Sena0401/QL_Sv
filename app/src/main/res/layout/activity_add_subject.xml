<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#e5f7ff"
    tools:context=".Activity_Add_Student">

    <EditText
        android:id="@+id/editTextMAMON"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã Môn"
        android:inputType="text" />
    <EditText
        android:id="@+id/editTextTENMON"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên Môn"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextTINHCHI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số Tín Chỉ "
        android:inputType="text" />

    <Button
        android:id="@+id/btnAddSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm Môn" />


</LinearLayout>
