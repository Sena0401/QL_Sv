<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5f7ff"
    android:orientation="vertical"
    tools:context=".Activity_Show_Student">
    <ImageButton
        android:background="@drawable/corner"
        android:layout_width="100dp"
        android:layout_height="30dp"/>


    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/circle_button"
        android:src="@drawable/baseline_arrow_back_24" />
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="8dp">

        <!-- Bố cục bên trong CardView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hiển thị thông tin sinh viên, ví dụ: Họ tên, Mã sinh viên, Ngày sinh, ... -->
            <TextView
                android:id="@+id/textViewMasv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã sinh viên: " />
            <TextView
                android:id="@+id/textViewMalop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Học Lớp: " />
            <TextView
                android:id="@+id/textViewHoten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ tên sinh viên: " />
            <TextView
                android:id="@+id/textViewNgaysinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày sinh sinh viên: " />
            <TextView
                android:id="@+id/textViewGioitinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới tính: " />

            <TextView
                android:id="@+id/textViewDantoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dân tộc: " />
            <TextView
                android:id="@+id/textViewDiachi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa Chỉ: " />

            <TextView
                android:id="@+id/textViewSdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số Điện Thoại: " />

        </LinearLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>